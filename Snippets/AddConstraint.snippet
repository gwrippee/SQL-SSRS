<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets>
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>AddConstraint</Title>
      <Shortcut>AddConstraint</Shortcut>
      <Description>ALTER TABLE ADD CONSTRAINT fragment.</Description>
      <Author>Devart</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>column_name</ID>
          <Default>salary</Default>
        </Literal>
        <Literal>
          <ID>schema</ID>
          <Default>dbo</Default>
        </Literal>
        <Literal>
          <ID>table_name</ID>
          <Default>table_name</Default>
        </Literal>
      </Declarations>
      <Code Language="SQL Server" Kind="SQL Server"><![CDATA[ALTER TABLE $schema$.$table_name$
	ADD CONSTRAINT CK_$table_name$_$column_name$ 
	CHECK ($column_name$ > 0)
GO
$CARET$]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>